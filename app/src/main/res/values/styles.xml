<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorPrimary">#fafafa</item>
        <item name="android:colorPrimaryDark">#e0e0e0</item>
        <item name="android:colorAccent">#2196f3</item>
        <item name="colorPrimary">#fafafa</item>
        <item name="colorPrimaryDark">#e0e0e0</item>
        <item name="colorAccent">#2196f3</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">#e0e0e0</item>
        <item name="android:navigationBarColor">?android:attr/colorBackground</item>
        <item name="android:navigationBarDividerColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">?android:attr/isLightTheme</item>
    </style>

    <style name="IntroTheme" parent="AppTheme">
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="DrawerArrowStyleNew" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">#FF000000</item>
    </style>

</resources>
